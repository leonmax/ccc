os.loadAPI("task")

local Walker = {}
Walker.__index = Walker

function Walker.new()
  local self = setmetatable({}, Walker)
  return self
end

function Walker.act(self)
end

local arg = { ... }
if #arg < 2 then
  print("Usage: walk <relative y> <relative x>")
end

local slot = 0
local y = tonumber(arg[1])
local x = tonumber(arg[2])

local actor = Walker.new(slot)
task.Task.new(actor):to(x, y)
