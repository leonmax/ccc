local Walker = {}
Walker.__index = Walker

function Walker.new()
  local self = setmetatable({}, Walker)
  return self
end

function Walker:act()
end

walker = Walker.new()

local Placer = {}
Placer.__index = Placer

function Placer.new()
  local self = setmetatable({}, Placer)
  return self
end

function Placer.placeDown(self)
  local success = turtle.placeDown(1)
  if success then
    print("placed a block below")
  end
  return success
end

function Placer.act(self)
  if not turtle.detectDown() then
    if not self:placeDown() then
      if slotmgr.reloadSlot() then
        self:placeDown()
      end
    end
  end
end

placer = Placer.new()
