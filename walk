os.loadAPI("task")

local Walker = {}
Walker.__index = Walker

function Walker.new()
  local self = setmetatable({}, Walker)
  return self
end

function Walker.act(self)
end

local arg = { ... }
if #arg < 2 then
  local program = fs.getName(shell.getRunningProgram())
  print("Usage: "..program.." <relative x> <relative y>")
end

local x = tonumber(arg[1])
local y = tonumber(arg[2])
local z = 0
if #arg >= 3 then z = tonumber(arg[3]) end

local actor = Walker.new()
task.Task.new(actor):to(vector.new(x, y, z))
